namespace Communication;

struct Bell {
    pressed: bool;
}

enum SessionType: byte {Controller=0, Follower, None }
struct Session {
    type: SessionType;
}

struct ObjectDetector {
    new_object: bool;
}

enum Status:byte { Stop=0, Start}
struct Service {
    camera: Status;
    mic: Status;
    speaker: Status;
}

union Content {
    Bell,
    Service,
    ObjectDetector,
    Session
}

table Request{
    id: int;
    content: Content;
}

root_type Request;